<script type="module">
    import {
        getNews,
        getKeys
    } from "../myFunctions.js";
    let keyList = getKeys();
    let newsKey = keyList[0];
    // ActiveEventHandler
    $(document).ready(function() {
        $("#getbbcnews").click(function() {
            document.getElementById("getbbcnews").className = "btn btn-danger";
            document.getElementById("gettrumpnews").className = "btn btn-primary";
            document.getElementById("getgooglenews").className = "btn btn-primary";
            document.getElementById("getapplenews").className = "btn btn-primary";
            let url = "https://newsapi.org/v2/top-headlines?sources=bbc-news&apiKey=" + newsKey;
            let response = getNews(url);
            updateTable(response);
        });
        // ActiveEventHandler
        $("#gettrumpnews").click(function() {
            document.getElementById("getbbcnews").className = "btn btn-primary";
            document.getElementById("gettrumpnews").className = "btn btn-danger";
            document.getElementById("getgooglenews").className = "btn btn-primary";
            document.getElementById("getapplenews").className = "btn btn-primary";
            let url = "https://newsapi.org/v2/top-headlines?q=trump&apiKey=" + newsKey;

            let response = getNews(url);
            updateTable(response);
        });
        // ActiveEventHandler
        $("#getgooglenews").click(function() {
            document.getElementById("getbbcnews").className = "btn btn-primary";
            document.getElementById("gettrumpnews").className = "btn btn-primary";
            document.getElementById("getgooglenews").className = "btn btn-danger";
            document.getElementById("getapplenews").className = "btn btn-primary";
            let url = "https://newsapi.org/v2/top-headlines?q=google&apiKey=" + newsKey;

            let response = getNews(url);
            updateTable(response);
        });
        // ActiveEventHandler
        $("#getapplenews").click(function() {
            document.getElementById("getbbcnews").className = "btn btn-primary";
            document.getElementById("gettrumpnews").className = "btn btn-primary";
            document.getElementById("getgooglenews").className = "btn btn-primary";
            document.getElementById("getapplenews").className = "btn btn-danger";
            let url = "https://newsapi.org/v2/top-headlines?q=apple&apiKey=" + newsKey;

            let response = getNews(url);
            updateTable(response);
        });

    });

    const updateTable = (jsonData) => {
        if (jsonData == null || jsonData == undefined) {
            return;
        }
        if (jsonData[0].author != null && jsonData[0].author != undefined) {
            document.getElementById("firstnews").innerHTML = jsonData[0].author;
        } else {
            document.getElementById("firstnews").innerHTML = "Ananya";

        }
        if (jsonData[0].title != null && jsonData[0].title != undefined) {

            document.getElementById("firsttitle").innerHTML = jsonData[0].title;
        } else {
            document.getElementById("firsttitle").innerHTML = "Reports have been made by user";

        }
        if (jsonData[1].author != null && jsonData[1].author != undefined) {

            document.getElementById("secondnews").innerHTML = jsonData[1].author;
        } else {
            document.getElementById("secondnews").innerHTML = "Ananya";

        }
        if (jsonData[1].title != null && jsonData[1].title != undefined) {

            document.getElementById("secondtitle").innerHTML = jsonData[1].title;
        } else {
            document.getElementById("secondtitle").innerHTML = "Reports have been made by user";

        }
        if (jsonData[2].author != null && jsonData[2].author != undefined) {
            document.getElementById("thirdnews").innerHTML = jsonData[2].author;
        } else {
            document.getElementById("thirdnews").innerHTML = "Ananya";

        }
        if (jsonData[2].title != null && jsonData[2].title != undefined) {

            document.getElementById("thirdtitle").innerHTML = jsonData[2].title;
        } else {
            document.getElementById("thirdtitle").innerHTML = "Reports have been made by user";
        }
        $("#newsTable").css("display", "block");
    }
</script>

